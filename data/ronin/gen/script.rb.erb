#!/usr/bin/env ruby

require 'ronin/ui/printing'
<%- if database? -%>require 'ronin/database'<%- end -%>

include Ronin::UI::Printing

<%- if database? -%>
Ronin::Database.setup
<%- end -%>

if $0 == __FILE__
  require 'optparse'

  options = {}
  optparser = OptionParser.new do |opts|
    opts.banner = "usage: #{$0} [options]"

    opts.on('-v','--verbose','Run in verbose mode') do
      Ronin::UI::Printing.verbose!
    end
  end

  optparser.parse!
end
