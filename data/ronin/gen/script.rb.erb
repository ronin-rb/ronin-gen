#!/usr/bin/env ruby

<%- if ronin? -%>
begin
  require 'ronin'
rescue LoadError
  abort "Could not load ronin. Please run `gem install ronin`"
end
<%- else %>
<%-   if ronin_support? -%>
begin
  require 'ronin/support'
rescue LoadError
  abort "Could not load ronin/support. Please run `gem install ronin-support`"
end
<%-   end -%>
<%-   if ronin_asm? -%>
begin
  require 'ronin/asm'
rescue LoadError
  abort "Could not load ronin/asm. Please run `gem install ronin-asm`"
end
<%-   end -%>
<%- end -%>

if $0 == __FILE__
  require 'optparse'

  options = {}
  optparser = OptionParser.new do |opts|
    opts.banner = "usage: #{$0} [options]"

    opts.on('-v','--verbose','Run in verbose mode') do
      Ronin::UI::Printing.verbose!
    end
  end

  optparser.parse!
end
