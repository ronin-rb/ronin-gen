# -*- ruby -*-

require 'rubygems'
require 'hoe'
require 'hoe/signing'

Hoe.plugin :yard

Hoe.spec('<%= @name %>') do
  self.developer('<%= @author %>', '<%= @email %>')

  self.rspec_options += ['--colour', '--format', 'specdoc']

  self.yard_options += ['--protected']
  self.remote_yard_dir = '/'

  self.extra_dev_deps += [
    ['rspec', '>=<%= RSPEC_VERSION %>'],
    ['yard', '>=<%= YARD_VERSION %>']
  ]
end

